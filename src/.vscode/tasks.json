{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/OpenSage.Game/OpenSage.Game.csproj"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
        },
        {
            "label": "test",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/OpenSage.Game.Tests/OpenSage.Game.Tests.csproj"
            ],
            "group": "test",
            "problemMatcher": "$msCompile",
        },
        {
            "label": "buildAptEditor",
            // Powershell command
            "command": "powershell",
            "args": [
                "chcp 65001; dotnet build ${workspaceRoot}/OpenSage.Tools.AptEditor/OpenSage.Tools.AptEditor.csproj | % { if($_.Contains(“warning”) -or $_.Contains(“error”)) { $proj = $_.Split(“[]”)[1]; $proj = $proj.Remove($proj.LastIndexOf(“\\”)); return (($proj + “\\” + $_).Trim() + “`n”);  } else { Write-Output $_; } }"// | % { $_ -replace \\\"^([^\\(]*)(.cs\\(.*)\\\",\\\"${workspaceRoot}\\OpenSage.Tools.AptEditor\\$1$2\\\" }",
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
        },
    ]
}